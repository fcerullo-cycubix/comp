{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "POSTGRES_URL",
    "POSTGRES_PRISMA_URL", 
    "DATABASE_URL_UNPOOLED",
    "POSTGRES_URL_NON_POOLING",
    "PGHOST",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DATABASE",
    "PGPASSWORD",
    "PGDATABASE",
    "PGHOST_UNPOOLED",
    "PGUSER",
    "POSTGRES_URL_NO_SSL",
    "POSTGRES_HOST",
    "NEON_PROJECT_ID",
    "STACK_SECRET_SERVER_KEY",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "AUTH_SECRET",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_BUCKET_NAME",
    "AWS_REGION",
    "REVALIDATION_SECRET",
    "DATABASE_URL",
    "NEXTAUTH_URL",
    "AUTH_TRUST_HOST",
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL", 
    "RESEND_API_KEY",
    "NEXT_PUBLIC_BETTER_AUTH_URL",
    "RESEND_FROM_DEFAULT",
    "RESEND_FROM_MARKETING",
    "RESEND_FROM_SYSTEM"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_URL_NON_POOLING",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN", 
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_SECRET",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_BUCKET_NAME",
        "AWS_REGION",
        "STACK_SECRET_SERVER_KEY",
        "NEON_PROJECT_ID",
        "REVALIDATION_SECRET",
        "DATABASE_URL",
        "NEXTAUTH_URL",
        "AUTH_TRUST_HOST",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "RESEND_API_KEY", 
        "NEXT_PUBLIC_BETTER_AUTH_URL",
        "RESEND_FROM_DEFAULT",
        "RESEND_FROM_MARKETING",
        "RESEND_FROM_SYSTEM"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "type-check": {}
  }
}