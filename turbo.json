{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "ui": "stream",

  "globalEnv": [
    "DATABASE_URL",
    "AUTH_SECRET",
    "GOOGLE_ID",
    "GOOGLE_SECRET",
    "NEXTAUTH_URL",
    "AUTH_TRUST_HOST",
    "RESEND_API_KEY",
    "REVALIDATION_SECRET",
    "NEXT_PUBLIC_PORTAL_URL",

    // ðŸ‘‡ add these
    "KV_REST_API_URL",
    "KV_REST_API_TOKEN",
    "KV_URL",
    "KV_REST_API_READ_ONLY_TOKEN",
    "REDIS_URL",

    // keep any others you already had...
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN"
  ],

  "tasks": {
    "prisma:generate": {
      "cache": false,
      "outputs": ["prisma/schema.prisma", "node_modules/.prisma/**"]
    },
    "build": {
      "dependsOn": ["^build", "prisma:generate"],
      "env": [
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "GOOGLE_ID",
        "GOOGLE_SECRET",
        "AUTH_SECRET",
        "DATABASE_URL",
        "RESEND_API_KEY",
        "REVALIDATION_SECRET",
        "NEXT_PUBLIC_PORTAL_URL",
        "NEXTAUTH_URL",
        "AUTH_TRUST_HOST",

        // ðŸ‘‡ add these too
        "KV_REST_API_URL",
        "KV_REST_API_TOKEN",
        "KV_URL",
        "KV_REST_API_READ_ONLY_TOKEN",
        "REDIS_URL",

        // if code still references old names
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts"]
    },

    "lint": { "dependsOn": ["^lint"] },
    "typecheck": { "outputs": ["node_modules/.cache/tsbuildinfo.json"] },
    "dev": { "inputs": ["$TURBO_DEFAULT$", ".env"], "persistent": true, "cache": false },
    "clean": { "cache": false },
    "deps:check": { "cache": false },
    "test": { "cache": false, "outputs": ["coverage/**"], "inputs": ["$TURBO_DEFAULT$", ".env"] }
  }
}